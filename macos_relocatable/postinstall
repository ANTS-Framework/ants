#!/bin/bash

#  ANTS pkg postinstall script for relocatable python
#
#  Load ants launch daemons
#
#
#  Created by Tim KÃ¶nigl
#
#  Created: 12/02/19
#

# load and launch daemons
launchctl load -w /Library/LaunchDaemons/ch.unibas.its.cs.ants.plist
launchctl load -w /Library/LaunchDaemons/ch.unibas.its.cs.ants.run-now.plist

# Change ansible-pull exe location
sed -i '' 's|ansible_pull_exe =.*|ansible_pull_exe = /Library/ANTS-Framework/Python.framework/Versions/Current/bin/ansible-pull|g' /etc/ants/ants.cfg
